<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/relLayMain">

    <TextView
        android:id="@+id/txtExerciseTimeMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exercise"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp"
        android:textStyle="bold"
        android:textSize="34sp"
        />

    <EditText
        android:id="@+id/exerciseTimeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtExerciseTimeMain"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="24dp"

        android:hint="Insert the time in seconds"
        android:inputType="number"
        android:selectAllOnFocus="true"
        />

    <TextView
        android:id="@+id/txtPauseTimeMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/exerciseTimeEditText"
        android:text="Pause"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:textSize="34sp"
        />

    <EditText
        android:id="@+id/pauseTimeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPauseTimeMain"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="24dp"

        android:hint="Insert the time in seconds"
        android:inputType="number"
        android:selectAllOnFocus="true"
        />

    <Button
        android:id="@+id/btnStartTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pauseTimeEditText"
        android:layout_marginStart="48dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="48dp"
        android:layout_centerHorizontal="true"

        android:text="GO"
        />

</RelativeLayout>